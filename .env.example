# Application
APP_ENV=development
LOG_LEVEL=INFO

# LemList API
LEMLIST_API_KEY=your_api_key_here

# MLflow (optional cloud tracking server)
MLFLOW_TRACKING_URI=http://localhost:5000

# OpenAI (for LLM feature enrichment)
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORG_ID=org-xxxxxxxxxxxxx  # Optional: OpenAI organization ID
OPENAI_DEFAULT_MODEL=gpt-4o-mini  # Default: gpt-4o-mini (fast & cheap)
# Other models: gpt-4o, gpt-4-turbo

# LLM Enrichment Settings
LLM_BATCH_SIZE=10  # Rows per API call (balance cost vs speed)
LLM_MAX_COST_USD=10.00  # Safety limit per enrichment session

# Database (PostgreSQL - same pattern as OC5)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/oc6_linkedin_lead_scoring

# Supabase (if using cloud PostgreSQL like OC5)
# DATABASE_URL=postgresql+asyncpg://postgres.[project]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres
